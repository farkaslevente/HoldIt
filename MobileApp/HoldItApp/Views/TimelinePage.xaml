<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HoldItApp.ViewModels"
             x:Class="HoldItApp.Views.TimelinePage"
             Title=""
             Shell.NavBarIsVisible="True">
    <ContentPage.BindingContext>
        <viewmodels:TimelinePageViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <CollectionView ItemsSource="{Binding posts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*" Margin="20">
                        <Label Text="alma" FontSize="20" Grid.Column="{Binding gridColumn}" TextColor="Black" HeightRequest="50"/>
                        <Border Grid.Column="{Binding gridColumn}" Background="{Binding messageColor}" StrokeShape="RoundRectangle 10" >
                            <VerticalStackLayout>
                                <Image Source="{Binding imgUrl}" VerticalOptions="Fill"/>
                                <Label Text="{Binding comment}" TextColor="{Binding textColor}" FontSize="20" Margin="10" />
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>